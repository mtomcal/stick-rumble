{
  "$id": "room_joinedMessage",
  "description": "room:joined WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "room:joined",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "RoomJoinedData",
      "description": "Room joined event payload",
      "type": "object",
      "required": [
        "playerId"
      ],
      "properties": {
        "playerId": {
          "description": "Unique identifier for the player",
          "minLength": 1,
          "type": "string"
        }
      }
    }
  }
}

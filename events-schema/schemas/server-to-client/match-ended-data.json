{
  "$id": "MatchEndedData",
  "description": "Match ended event payload",
  "type": "object",
  "required": [
    "winners",
    "finalScores",
    "reason"
  ],
  "properties": {
    "winners": {
      "description": "Array of winner player IDs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "finalScores": {
      "description": "Map of player IDs to final scores",
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "type": "number"
        }
      }
    },
    "reason": {
      "description": "Reason the match ended",
      "minLength": 1,
      "type": "string"
    }
  }
}

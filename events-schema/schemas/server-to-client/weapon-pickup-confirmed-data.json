      "minLength": 1,
      "type": "string"
    },
    "crateId": {
      "description": "Crate that was picked up",
      "minLength": 1,
      "type": "string"
    },
    "weaponType": {
      "description": "Type of weapon picked up",
      "minLength": 1,
      "type": "string"
    },
    "nextRespawnTime": {
      "description": "Time until the crate respawns (milliseconds)",
      "minimum": 0,
      "type": "integer"
    }
  }
}

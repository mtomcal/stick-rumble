{
  "$id": "hit_confirmedMessage",
  "description": "hit:confirmed WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "hit:confirmed",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "HitConfirmedData",
      "description": "Hit confirmed event payload",
      "type": "object",
      "required": [
        "victimId",
        "damage",
        "projectileId"
      ],
      "properties": {
        "victimId": {
          "description": "Player who was hit",
          "minLength": 1,
          "type": "string"
        },
        "damage": {
          "description": "Amount of damage dealt",
          "minimum": 0,
          "type": "number"
        },
        "projectileId": {
          "description": "Projectile that hit",
          "minLength": 1,
          "type": "string"
        }
      }
    }
  }
}

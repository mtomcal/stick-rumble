{
  "$id": "match_endedMessage",
  "description": "match:ended WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "match:ended",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "MatchEndedData",
      "description": "Match ended event payload",
      "type": "object",
      "required": [
        "winners",
        "finalScores",
        "reason"
      ],
      "properties": {
        "winners": {
          "description": "Array of winner player IDs",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "finalScores": {
          "description": "Array of final player scores",
          "type": "array",
          "items": {
            "$id": "PlayerScore",
            "description": "Player final score data",
            "type": "object",
            "required": [
              "playerId",
              "kills",
              "deaths",
              "xp"
            ],
            "properties": {
              "playerId": {
                "description": "Player unique identifier",
                "minLength": 1,
                "type": "string"
              },
              "kills": {
                "description": "Number of kills",
                "minimum": 0,
                "type": "integer"
              },
              "deaths": {
                "description": "Number of deaths",
                "minimum": 0,
                "type": "integer"
              },
              "xp": {
                "description": "Total XP earned",
                "minimum": 0,
                "type": "integer"
              }
            }
          }
        },
        "reason": {
          "description": "Reason the match ended",
          "minLength": 1,
          "type": "string"
        }
      }
    }
  }
}

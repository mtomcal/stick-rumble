{
  "$id": "PlayerRespawnData",
  "description": "Player respawn event payload",
  "type": "object",
  "required": [
    "playerId",
    "position",
    "health"
  ],
  "properties": {
    "playerId": {
      "description": "Player who respawned",
      "minLength": 1,
      "type": "string"
    },
    "position": {
      "description": "A 2D position coordinate",
      "type": "object",
      "required": [
        "x",
        "y"
      ],
      "properties": {
        "x": {
          "description": "X coordinate",
          "type": "number"
        },
        "y": {
          "description": "Y coordinate",
          "type": "number"
        }
      }
    },
    "health": {
      "description": "Respawn health",
      "minimum": 0,
      "type": "number"
    }
  }
}

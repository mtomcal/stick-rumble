{
  "$id": "player_deathMessage",
  "description": "player:death WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "player:death",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "PlayerDeathData",
      "description": "Player death event payload",
      "type": "object",
      "required": [
        "victimId",
        "attackerId"
      ],
      "properties": {
        "victimId": {
          "description": "Player who died",
          "minLength": 1,
          "type": "string"
        },
        "attackerId": {
          "description": "Player who got the kill",
          "minLength": 1,
          "type": "string"
        }
      }
    }
  }
}

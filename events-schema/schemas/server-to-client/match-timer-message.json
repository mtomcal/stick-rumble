{
  "$id": "match_timerMessage",
  "description": "match:timer WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "match:timer",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "MatchTimerData",
      "description": "Match timer event payload",
      "type": "object",
      "required": [
        "remainingSeconds"
      ],
      "properties": {
        "remainingSeconds": {
          "description": "Seconds remaining in the match",
          "minimum": 0,
          "type": "integer"
        }
      }
    }
  }
}

{
  "$id": "roll_endMessage",
  "description": "roll:end WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "roll:end",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "RollEndData",
      "description": "Roll end event payload",
      "type": "object",
      "required": [
        "playerId",
        "reason"
      ],
      "properties": {
        "playerId": {
          "description": "Player who stopped rolling",
          "minLength": 1,
          "type": "string"
        },
        "reason": {
          "description": "Reason roll ended (completed, wall_collision)",
          "minLength": 1,
          "type": "string"
        }
      }
    }
  }
}

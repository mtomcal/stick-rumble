{
  "$id": "melee_hitMessage",
  "description": "melee:hit WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "melee:hit",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "MeleeHitData",
      "description": "Melee hit event payload",
      "type": "object",
      "required": [
        "attackerId",
        "victims",
        "knockbackApplied"
      ],
      "properties": {
        "attackerId": {
          "description": "Player who performed the melee attack",
          "minLength": 1,
          "type": "string"
        },
        "victims": {
          "description": "Array of player IDs hit by the attack",
          "type": "array",
          "items": {
            "minLength": 1,
            "type": "string"
          }
        },
        "knockbackApplied": {
          "description": "Whether knockback was applied (Bat only)",
          "type": "boolean"
        }
      }
    }
  }
}

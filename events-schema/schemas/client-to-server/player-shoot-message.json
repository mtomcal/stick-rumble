{
  "$id": "player_shootMessage",
  "description": "player:shoot WebSocket message",
  "type": "object",
  "required": [
    "type",
    "timestamp",
    "data"
  ],
  "properties": {
    "type": {
      "description": "Message type identifier",
      "const": "player:shoot",
      "type": "string"
    },
    "timestamp": {
      "description": "Unix timestamp in milliseconds",
      "minimum": 0,
      "type": "integer"
    },
    "data": {
      "$id": "PlayerShootData",
      "description": "Player shoot action payload",
      "type": "object",
      "required": [
        "aimAngle",
        "clientTimestamp"
      ],
      "properties": {
        "aimAngle": {
          "description": "Aim angle in radians",
          "type": "number"
        },
        "clientTimestamp": {
          "description": "Client-side timestamp in milliseconds when shot was fired",
          "minimum": 0,
          "type": "number"
        }
      }
    }
  }
}
